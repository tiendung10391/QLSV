<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_mp_1" >

    </FrameLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NGUYỄN TIẾN DŨNG VÀ CÁI DUYÊN ĐẾN VỚI NGHỀ LẬP TRÌNH"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hẹn gặp em trong một buổi chiều mưa tầm tã, vẫn phong cách chỉn chu của anh chàng lớp trưởng thường ngày, nụ cười luôn thường trực trên môi. Với bất cứ ai, chàng trai mang tên Tiến Dũng vẫn luôn thân thiện như thế. Hàng ngày tôi vẫn nói chuyện với em, lắng nghe những chia sẻ của em trong quá trình học tập tại ITPlus, còn hôm nay em lại chia sẻ với tôi về cái duyên theo đuổi nghề lập trình."
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
