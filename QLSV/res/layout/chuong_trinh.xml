<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#2e2e2e"
        android:paddingBottom="7dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="7dp" >

        <EditText
            android:id="@+id/ed_ct"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/my_edittext"
            android:ems="10"
            android:hint="Chương trình học"
            android:padding="5dp" />

        <Button
            android:id="@+id/bt_ct"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/my_button"
            android:text="Chọn"
            android:textColor="#fff"
            android:textSize="18sp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Danh sách các môn học"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#2b7bff"
            android:textSize="20sp"
            android:textStyle="bold" />
		
    </FrameLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="18dp"
        android:shrinkColumns="*"
        android:stretchColumns="*" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ct_tv1"
                android:layout_weight="10"
                android:background="@drawable/my_table"
                android:gravity="center"
                android:text="STT"
                android:textColor="#fff"
                android:textSize="15sp" />
	            
			<TextView
			    android:id="@+id/ct_tv2"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="Mã môn"
			    android:background="@drawable/my_table"
			    android:textColor="#fff"
			    android:textSize="15sp" />
			
			<TextView
			    android:id="@+id/ct_tv3"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="Tên môn"
			    android:background="@drawable/my_table"
			    android:textColor="#fff"
			    android:textSize="15sp" />
			<TextView
			    android:id="@+id/ct_tv4"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="Số giờ"
			    android:background="@drawable/my_table"
			    android:textColor="#fff"
			    android:textSize="15sp" />
			<TextView
			    android:id="@+id/ct_tv5"
			    android:layout_weight="1"
			    android:gravity="center"
			    android:text="Ghi chú"
			    android:background="@drawable/my_table"
			    android:textColor="#fff"
			    android:textSize="15sp" />

	    </TableRow>
    </TableLayout>

</LinearLayout>
